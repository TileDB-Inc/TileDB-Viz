{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2020"
  },
  "typedocOptions": {
    "entryPoints": ["packages/core/src/index.ts"],
    "out": "quarto/typedocs"
  },
  "include": ["./packages/**/src", "./__mocks__/**/*.json"]
}
